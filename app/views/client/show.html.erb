<div class="flex-row">
    <h1 class="font-bold text-4xl text-blue-500">Thank you, <%= @pl.name %></h1>
    <h2 class="font-bold text-2xl">Your list has been received</h2>

    <p>For your reference, the items requested are:</p>

    <%- @pl.pick_list_items.includes(:item).group_by{|i| i.item.category_id}.each do |category_id, items| %>
        <ul class="rounded-lg w-64 border-2 border-gray-200 text-gray-900">
            <li class="bg-blue-500 text-white rounded-lg text-center"><%= Category.find(category_id).name %></li>
            <%- items.each do |item| %>
                <li class="px-2 py-1"><%= item.item.name %></li>
            <% end %>
        </ul>
    <% end %>
</div>