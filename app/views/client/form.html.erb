<%= form_with class:"w-full" do |form| %>
    <div>
        <div class="input-group mb-6 flex">
            <%= form.label :name, "Name:", class: "font-bold px-4 py-2" %>
            <%= form.text_field :name, required: true, class: "rounded grow" %>
            <%= form.submit "Submit", class: "rounded border-2 border-blue-500 text-blue-500 font-bold px-6 py-2" %>
        </div>
    </div>

    <div class="flex flex-wrap">
        <%- @categories.each do |category| %>
            <div class="basis-64 gap-4">
                <fieldset>
                    <legend class="text-lg font-bold"><%= category.name %> (Limit <%= category.limit %>)</legend>
                    <%- category.items.each do |item| %>
                        <div class="flex items-center mb-1/2">
                            <%= form.check_box "_item_#{item.id}", class: "rounded mr-1" %>
                            <%= form.label "_item_#{item.id}", item.name%>
                        </div>
                    <%- end %>
                </fieldset>
            </div>
        <%- end %>
    </div>
<% end %>